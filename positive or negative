/*1. Write a program to check if a number is positive or negative*/
fn main() {
    let number: i32 = -5;
    if number > 0 {
        println!("The number {} is positive.", number);
    } else if number < 0 {
        println!("The number {} is negative.", number);
    } else {
        println!("The number is zero.");
    }
}
